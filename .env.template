# ===========================================
# CONFIGURACIÓN LARAVEL + VITE SIN DOCKER
# ===========================================

APP_NAME="CRM Vite React"
APP_ENV=local
APP_KEY=base64:GENERA_TU_KEY_CON_php_artisan_key:generate
APP_DEBUG=true
APP_URL=http://127.0.0.1:8095
APP_PORT=8095

# Configuración regional
APP_LOCALE=es
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=es_ES

APP_MAINTENANCE_DRIVER=file
PHP_CLI_SERVER_WORKERS=4
BCRYPT_ROUNDS=12

# ===========================================
# LOGS Y DEBUG
# ===========================================
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ===========================================
# BASE DE DATOS (SQLite para desarrollo)
# ===========================================
DB_CONNECTION=sqlite
DB_DATABASE=database/database.sqlite

# Para usar MySQL con Laragon descomenta y configura:
# DB_CONNECTION=mysql
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=crm_database
# DB_USERNAME=root
# DB_PASSWORD=

# ===========================================
# SESIONES Y CACHE
# ===========================================
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database
CACHE_STORE=database

# ===========================================
# REDIS (si usas Laragon con Redis)
# ===========================================
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# ===========================================
# EMAIL (desarrollo con logs)
# ===========================================
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="noreply@crm-local.test"
MAIL_FROM_NAME="${APP_NAME}"

# ===========================================
# VITE CONFIGURACIÓN
# ===========================================
VITE_APP_NAME="${APP_NAME}"
VITE_APP_URL="${APP_URL}"
VITE_API_URL="${APP_URL}/api"

# Frontend Vite server
VITE_HOST=127.0.0.1
VITE_PORT=5174

# ===========================================
# CORS PARA FRONTEND
# ===========================================
FRONTEND_URL=http://127.0.0.1:5174
SANCTUM_STATEFUL_DOMAINS=127.0.0.1:5174,localhost:5174

# ===========================================
# N8N CONFIGURACIÓN SIN DOCKER
# ===========================================
N8N_HOST=127.0.0.1
N8N_PORT=5678
N8N_BASIC_AUTH_ACTIVE=false
N8N_URL=http://127.0.0.1:5678

# Tokens de comunicación Laravel ↔ n8n (CAMBIAR EN PRODUCCIÓN)
N8N_TO_LARAVEL_TOKEN=laravel_secret_token_123456
N8N_WEBHOOK_TOKEN=webhook_secret_token_789012

# RSS Feeds configurables
RSS_FEED_URL=https://www.eltiempo.com/rss/bogota.xml
RSS_FEED_URL_MOVILIDAD=https://www.eltiempo.com/rss/movilidad
RSS_FEED_URL_TECNOLOGIA=https://www.elcolombiano.com/rss/tecnologia/movilidad

