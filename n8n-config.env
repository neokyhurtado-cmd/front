# ===========================================
# CONFIGURACIÓN N8N SIN DOCKER - LARAGON
# ===========================================

# Variables de entorno para n8n (agrega esto a tu .env principal)

# Configuración básica n8n
N8N_BASIC_AUTH_ACTIVE=false
N8N_HOST=127.0.0.1
N8N_PORT=5678
N8N_PROTOCOL=http

# URLs del proyecto (sin Docker)
APP_URL=http://127.0.0.1:8095
FRONTEND_URL=http://127.0.0.1:5174
N8N_URL=http://127.0.0.1:5678

# Tokens para comunicación n8n ↔ Laravel
N8N_TO_LARAVEL_TOKEN=tu_token_secreto_aqui_cambiar
N8N_WEBHOOK_TOKEN=webhook_token_secreto_aqui_cambiar

# RSS Feeds configurables
RSS_FEED_URL=https://www.eltiempo.com/rss/bogota.xml
RSS_FEED_URL_MOVILIDAD=https://www.eltiempo.com/rss/movilidad
RSS_FEED_URL_TECNOLOGIA=https://www.elcolombiano.com/rss/tecnologia/movilidad

# APIs externas (opcional)
OPENAI_API_KEY=tu_openai_key_aqui
GEMINI_API_KEY=tu_gemini_key_aqui
PEXELS_API_KEY=tu_pexels_key_aqui

# Configuración de proxy (para Laragon/desarrollo local)
NO_PROXY=127.0.0.1,localhost,::1,localhost.localdomain
no_proxy=127.0.0.1,localhost,::1,localhost.localdomain

# Configuración de archivos n8n
N8N_USER_FOLDER=%USERPROFILE%/.n8n
N8N_WORKFLOWS_FOLDER=C:/laragon/www/INICIO/crm-vite-react/laravel-backend/n8n-workflows

# Configuración de logs
N8N_LOG_LEVEL=info
N8N_LOG_OUTPUT=console

# Configuración de seguridad para desarrollo
N8N_SECURE_COOKIE=false
N8N_DISABLE_UI=false